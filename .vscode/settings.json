{
    // Python 解释器设置
    "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
    "python.terminal.activateEnvironment": true,
    
    // 自动激活虚拟环境
    "python.terminal.activateEnvInCurrentTerminal": true,
    
    // 代码格式化设置
    "editor.formatOnSave": true,

    // 文件排除设置
    "files.exclude": {
        "**/__pycache__": true,
        "**/*.pyc": true,
        ".pytest_cache": true,
        ".coverage": true,
        "htmlcov": true
    },
    
    // 搜索排除设置
    "search.exclude": {
        "**/__pycache__": true,
        "**/*.pyc": true,
        ".venv": true,
        ".pytest_cache": true,
        ".coverage": true,
        "htmlcov": true
    }
}
